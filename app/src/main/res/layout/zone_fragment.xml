<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding">


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="460dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lstView_zone_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypad_date_border"
                    android:gravity="center"
                    android:text="Zone 2"
                    android:textSize="54sp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/lstView_zone_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/keypad_date_border"
                android:gravity="center"
                android:text="Zone 1"
                android:textSize="54sp"></TextView>

            <TextView
                android:id="@+id/lstView_zone_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/keypad_date_border"
                android:gravity="center"
                android:text="Zone 3"
                android:textSize="54sp"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>