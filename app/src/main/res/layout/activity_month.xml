<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/parent_layout_padding"
        android:paddingRight="@dimen/parent_layout_padding">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/label_layout_row__style"
                android:layout_width="fill_parent"
                android:layout_height="40px"
                android:orientation="horizontal">

                <TextView
                    style="@style/arrow_style"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:text=">"
                    android:textColor="@color/generic_blue" />

                <TextView

                    style="@style/label_style"
                    android:layout_width="0px"
                    android:layout_height="30px"
                    android:layout_weight="3"
                    android:text="@string/labeltxt_total_deposit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtMobileNumberInMobileNumberInput"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/squarebackgoundred"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:hint="@string/labeltxt_total_deposit"
                    android:inputType="number"
                    android:textSize="48sp" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutTransactionAmountInMobileNumberInput"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_marginTop="32px"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/label_layout_row__style"
                android:layout_width="fill_parent"
                android:layout_height="40px"
                android:layout_gravity="center"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView

                    style="@style/arrow_style"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"

                    android:textColor="@color/generic_blue" />

                <TextView
                    android:id="@+id/lblTransactionAmountBasedOnType"
                    style="@style/label_style"
                    android:layout_width="0px"
                    android:layout_height="30px"
                    android:layout_weight="3"
                    android:text="টাকার পরিমান কথায় " />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFragmentContainerInMobileNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_bottom"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:useDefaultMargins="false">



            </GridLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/a"

                style="@style/NumberPadButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:text="" />

            <Button
                android:id="@+id/b"
                style="@style/NumberPadButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>



